{% extends 'base.html.twig' %}


{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}
    <div class="container">
        <div class="row">
            <div class="col-12 mt-5">
                <h1 class="text-center display-3">Connexion</h1>
            </div>
        </div><br>
        <div class="form-row">
            <div class="form-group col-6">
              <label for="inputEmail4">Pseudo</label>
              <input type="text" id="inputPseudo" class="form-control" id="inputEmail4">
            </div>
            <div class="form-group col-6">
                <label for="inputEmail4">Mot de passe</label>
                <div class="input-group mb-3">
                    <input type="password" id="mdp" class="form-control" aria-label="Recipient's username" aria-describedby="basic-addon2">
                    <div class="input-group-append">
                      <button type="button" onclick="AfficherMDP();" class="btn btn-primary" id="eye"><i class="far fa-eye"></i></button>
                      <button type="button" onclick="AfficherMDP();" class="btn btn-primary" id="eyeslash" style="display: none;"><i class="far fa-eye-slash"></i></button>
                    </div>
                </div>
            </div>
        </div>
    

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}

        <div class="row">
            <div class="col-12 text-center">
                <button class="btn btn-outline-primary" type='submit'>Me connecter</button>
            </div>
        </div>
    </div>
</form>
{% endblock %}
{% block javascripts %}
<script>
    function AfficherMDP(){
        if ($('#mdp').attr("type") == "password") {
            $('#mdp').attr('type', 'text')
            $('#eye').css('display', 'none')
            $('#eyeslash').css('display', 'block')
        }else{
            $('#mdp').attr('type', 'password')
            $('#eye').css('display', 'block')
            $('#eyeslash').css('display', 'none')
        }
    }
</script>
{% endblock %}